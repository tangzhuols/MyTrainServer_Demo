<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:background="#ccc"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/fanhui2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="getEventMyEnroll"
            android:background="@drawable/linear_yangsi"

            android:layout_height="50dp">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/u6_normal1"
                android:textColor="#06f3"
                android:onClick="getEventMyEnroll"
                android:textSize="22dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="5"
            android:text="登  陆"
            android:textColor="#000"
            android:textSize="24dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:gravity="center_horizontal"
            android:layout_height="40dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="50dp"
            android:text="登录名:"
            android:textColor="#6f3"
            android:textSize="22dp"/>
        <EditText
            android:id="@+id/trName"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:text="18827582420"
            android:background="@drawable/push_button"
            android:layout_height="40dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="50dp"
            android:text="密码:"
            android:textColor="#6f3"
            android:textSize="22dp"/>
        <EditText
            android:id="@+id/trpwd"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:inputType="textPassword"
            android:text="18827582420"
            android:background="@drawable/push_button"
            android:layout_height="40dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:id="@+id/nexttep"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#fff"
            android:onClick="getEventMyEnroll"
            android:background="@drawable/u4_normal"
            android:text="登陆"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/wagnji"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:layout_gravity="right"
        android:onClick="getEventMyEnroll"
        android:gravity="right|bottom"
       >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:paddingRight="20dp"
            android:textSize="20dp"

            android:text="忘记密码？"/>

    </LinearLayout>
</LinearLayout>
