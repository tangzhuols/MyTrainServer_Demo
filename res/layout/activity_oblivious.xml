<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:background="#ccc"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/fanhui1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="getEventOblivious"
            android:background="@drawable/linear_yangsi"

            android:layout_height="50dp">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#0ccc"
                android:src="@drawable/u6_normal1"
                android:textSize="22dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="5"
            android:text="注 册"
            android:textColor="#000"
            android:textSize="24dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:gravity="center_horizontal"
            android:layout_height="40dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="50dp"
            android:text="用户名:"
            android:textColor="#6f3"
            android:textSize="22dp"/>
        <EditText
            android:id="@+id/userName"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:paddingLeft="10dp"
            android:inputType="phone"
            android:background="@drawable/push_button"
            android:layout_height="40dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="50dp"
            android:text="验证码:"
            android:textColor="#6f3"
            android:textSize="22dp"/>
        <EditText
            android:id="@+id/phoneGain"
            android:layout_width="0dp"
            android:layout_weight="2.5"
            android:background="@drawable/push_button"
            android:layout_height="40dp" />
        <Button
            android:id="@+id/gain"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:onClick="getEventOblivious"
            android:textColor="#fff"
            android:background="@drawable/u4_normal"
            android:text="获得验证码"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:id="@+id/nexttep"
            android:onClick="getEventOblivious"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#fff"
            android:background="@drawable/u4_normal"
            android:text="下一步"/>
    </LinearLayout>
</LinearLayout>
